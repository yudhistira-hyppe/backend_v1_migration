{
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Remote",
      "port": 9229,
      "address": "localhost",
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "/root/backend-hyppe/backend_v1_migration", // Use exact path from pwd command
      "sourceMapPathOverrides": {
        "webpack:///./~/*": "${workspaceFolder}/node_modules/*",
        "webpack:////*": "/*",
        "webpack:///?:*/*": "${workspaceFolder}/*"
      },
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "backend local Debug",
      "type": "node-terminal", // Use node-terminal to run npm start
      "request": "launch",
      "command": "npm run start:watch", // Command to run your application
      "cwd": "${workspaceFolder}" // Current working directory
    }
  ]
}
